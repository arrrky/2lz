<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="_2lz.Pages.PushSender.AddAppPage">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*,*" Style="{StaticResource baseGridStyle}">

        <!-- ROW 0 - App info -->

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Text="App name"
            Style="{StaticResource infoLabelStyle}"/>

        <Entry 
            Grid.Row="0" 
            Grid.Column="1" />

        <Label
            Grid.Row="0"
            Grid.Column="2"
            Text="App ID"
            Style="{StaticResource infoLabelStyle}"/>

        <Entry 
            Grid.Row="0" 
            Grid.Column="3" />

        <!-- ROW 1 - Add button -->

        <Button 
            Grid.Row="1" 
            Grid.Column="0" 
            Grid.ColumnSpan="4" 
            Text="Add" 
            Style="{StaticResource baseButtonStyle}"/>


    </Grid>
    
</ContentPage>