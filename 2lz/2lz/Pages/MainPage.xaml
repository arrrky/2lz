<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2lz.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource backgroundColor}">

    <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*" Style="{StaticResource baseGridStyle}">

        <Label
            Grid.Row="0"
            Text="2lz"
            Style="{StaticResource infoLabelStyle}"
            HorizontalOptions="Center"
            FontSize="50"/>

        <Image
            Grid.Row="1"
            Source="image_2lz.jpg"
            SemanticProperties.Description="2lz image generated by StableDuffusion"            
            HorizontalOptions="Center" />

        <Button
            Grid.Row="2"
            Text="PushSender"
            Clicked="OnPushSenderButton_Clicked"
            Style="{StaticResource mainPageButtonStyle}"/>

        <Button        
            Grid.Row="3"
            Text="Open git page"                
            Clicked="OnGitLinkButton_Clicked"
            Style="{StaticResource mainPageButtonStyle}"/>

    </Grid>

</ContentPage>