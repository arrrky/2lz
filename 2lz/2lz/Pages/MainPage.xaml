<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2lz.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="image_2lz.jpg"
                SemanticProperties.Description="2lz image generated by StableDuffusion"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="2lz"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to 2lz app!"                
                FontSize="18"
                HorizontalOptions="Center" />

            <Button                
                Text="Open git page"                
                Clicked="OnGitLinkButton_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>